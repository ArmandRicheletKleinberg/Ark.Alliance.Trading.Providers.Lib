{
    "version": "1.0.0",
    "description": "Binance Futures Order Test Scenarios - Covers all order types, time-in-force modes, and sides",
    "scenarios": [
        {
            "id": "ORD-001",
            "name": "LIMIT Long GTC Order",
            "description": "Place a standard limit buy order with Good Till Cancel time-in-force",
            "category": "orders",
            "tags": [
                "limit",
                "long",
                "gtc",
                "basic"
            ],
            "enabled": true,
            "environment": {
                "provider": "binance",
                "network": "TESTNET",
                "requiresAuth": true,
                "credentialRef": "binance-testnet"
            },
            "targetClass": "BinanceRestClient",
            "targetMethod": "placeOrder",
            "input": {
                "parameters": {
                    "symbol": "BTCUSDT",
                    "side": "BUY",
                    "type": "LIMIT",
                    "quantity": 0.002,
                    "price": "50000",
                    "timeInForce": "GTC"
                }
            },
            "expected": {
                "success": true,
                "resultData": {
                    "status": "NEW",
                    "type": "LIMIT",
                    "side": "BUY",
                    "timeInForce": "GTC"
                }
            },
            "validation": {
                "strictMatch": false,
                "ignoreFields": [
                    "orderId",
                    "clientOrderId",
                    "updateTime"
                ]
            },
            "cleanup": [
                {
                    "id": "cancel-order",
                    "targetClass": "BinanceRestClient",
                    "targetMethod": "cancelAllOpenOrders",
                    "parameters": {
                        "symbol": "BTCUSDT"
                    }
                }
            ]
        },
