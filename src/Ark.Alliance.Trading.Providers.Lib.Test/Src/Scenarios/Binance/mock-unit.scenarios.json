{
    "version": "1.0.0",
    "description": "Mock-based unit tests for BinanceRestClient - runs without live connection",
    "scenarios": [
        {
            "id": "MOCK-001",
            "name": "Order Mapper - Market Order",
            "description": "Test OrderMapper with mock market order response",
            "category": "clients",
            "tags": [
                "mock",
                "mapper",
                "order",
                "unit-test"
            ],
            "enabled": true,
            "environment": {
                "provider": "binance",
                "network": "TESTNET",
                "requiresAuth": false,
                "requiresLiveConnection": false
            },
            "targetClass": "OrderMapperTests",
            "targetMethod": "testMapMarketOrder",
            "input": {
                "parameters": {},
                "mockData": {
                    "symbol": "BTCUSDT",
                    "orderId": 123456789,
                    "clientOrderId": "test_mock_001",
                    "side": "BUY",
                    "type": "MARKET",
                    "status": "FILLED",
                    "origQty": "0.001",
                    "executedQty": "0.001",
                    "avgPrice": "50000.00",
                    "timeInForce": "GTC"
                }
            },
            "expected": {
                "success": true,
                "resultData": {
                    "symbol": "BTCUSDT",
                    "side": "BUY",
                    "type": "MARKET",
                    "status": "FILLED"
                }
            }
        },
