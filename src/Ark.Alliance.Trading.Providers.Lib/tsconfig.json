{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "types": [
            "node"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "rootDir": "./Src",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "Src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}